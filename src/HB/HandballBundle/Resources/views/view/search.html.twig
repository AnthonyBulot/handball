{# empty Twig template #}
{% extends "HBHandballBundle::layout.html.twig" %}

{% block body %}
    <div>
        {% if posts is  null %}
            <p class="center">Désolé nous n'avons rien trouvé :(</p>
        {% else %}
            {% for post in posts %}
                <div class="row post">
                    <h3 class="col-lg-12 center titrePost">{{ post.title}}</h3>
                    <p class="col-lg-12 center"><a class="lienPost" href="{{ path('hb_handball_onlyOne', {'id':post.id}) }}">Voir plus...</a></p>
                    <p class="col-lg-12 center photoPost"><img class="taillePhotoPost" src="{{ asset(post.image.uploadDir ~ '/' ~ post.image.id ~ '.' ~ post.image.url) }}" alt='{{ post.image.alt}}' /></p>    
                </div>     
            {% endfor %}
        {% endif %}      
    </div>

    {% if posts is  null %}
    {% else %}
    <div class="row">
        <p class="pagination">Page : 

            {% for page in numberPages %}
                
                {% if loop.index == currentPage %}
                    
                    [ {{ loop.index }} ]
     
                {% else %}
                    <a href="{{ path('hb_handball_search2', {'page':loop.index, 'recherche':recherche}) }}">
                        {{ loop.index }}
                    </a>

                {% endif %}
            {% endfor %}
        </p>
    </div>
    {% endif %}
{% endblock %}